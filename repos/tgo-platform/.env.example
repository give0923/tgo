# tgo-platform example environment variables
TGO_API_BASE=https://tgo-api.example.com
# Note: Docker Compose exposes PostgreSQL on port 5442 (see docker-compose.yml)
TGO_PG_DSN=postgresql+asyncpg://tgo_user:tgo_pass@127.0.0.1:5442/tgo
TGO_REQUEST_TIMEOUT_SECONDS=120

# Global SMTP (outbound email) configuration
TGO_SMTP_HOST=smtp.example.com
TGO_SMTP_PORT=587
TGO_SMTP_USERNAME=no-reply@example.com
TGO_SMTP_PASSWORD=changeme
TGO_SMTP_USE_TLS=true
TGO_SMTP_FROM_ADDRESS=no-reply@example.com


# Redis URL for visitor caching
# When running the app outside Docker, use the host-mapped port (6380):
#   redis://127.0.0.1:6380/0
# When running the app inside Docker, use the service name and internal port:
#   redis://redis:6379/0
TGO_REDIS_URL=redis://127.0.0.1:6380/0
